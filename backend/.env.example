# TicketKini Backend Environment Configuration Template
# Copy this file to `.env` and fill in the actual values
# NEVER commit the actual .env file to version control!

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/ticketkini
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=ticketkini

# Security Configuration (Generate strong secrets!)
SECRET_KEY=your-super-secret-key-here-generate-a-long-random-string
JWT_SECRET_KEY=your-jwt-secret-key-here-also-generate-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Application Settings
DEBUG=False
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:5173"]
MAX_BOOKING_SEATS=6
BOOKING_EXPIRY_MINUTES=15

# Development/Production Environment
ENVIRONMENT=development
